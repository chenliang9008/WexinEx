.hot-box-more{ 
  display: flex;
  text-align: center; 
  font-size: 22rpx; 
  color: #999; 
  margin-bottom: 30px;
  justify-content: center;
  align-items: center;
}

.hot-box-more image{ 
  width: 80px;
  height: 16px;
  display: flex;
  margin-top: 30rpx;
  justify-content: center;
  align-items: center;
}
.date-title-style{
  display:flex;
  align-items:center;
  justify-content:center;
  width: 100%;
  margin: 40rpx;
}
.date-item-style{
  display: flex;
  height: 100rpx;
  width: 30%;
  align-items: center;
  justify-content: center;
  text-align: center
}

.content-item{
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #F6F6F6;
}

.content-item-text{
  margin-top: 10rpx;
  margin-left: 20rpx;
  margin-right: 10rpx;
  font-size: 24rpx;
  color: #444;
  line-height: 42rpx;
}
.content-item-text-sub{
  margin-top: 10rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  text-align: right;
  font-size: 24rpx; 
  color: #666; 
  padding-top: 6px; 
}

.content-item-view image{
  width: 100rpx;
  height: 100rpx;
  align-items: center;
  margin: 10rpx;
  border-radius: 10rpx;
}

.contentViewStyle{
  width:100%;
  justify-content:flex-end;
  display: flex;
}

.hot-box-title{
  font-size: 32rpx;
  height: 30px; 
  line-height: 32px;
  font-weight: 400; 
  color: #444; 
  padding: 5px 10px;
  border: 1px solid #444;
}

.content-item-view{
  width: 100%;
  display: flex;
  flex-direction: row;
}

