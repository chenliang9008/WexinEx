.outContainer{
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
}
.selection{
  display: flex;
  flex-direction: column;
  width: 100%;
}

.imageViewStyle{
  width: 100%;
}

.header{
  height: 50rpx;
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  border-left-style: solid;
  border-left-color: darkcyan;
  border-left-width: 4rpx;
  justify-content: space-between;
  padding-left: 10rpx;
  margin-right: 10rpx;
  align-items: center;
  border-bottom: 1.4px solid #ddd;
}

.text-all{
  color: green;
  font-size: 14px;
}

.content{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}
.content-item{
  width: 45%;
  height: 240rpx;
  position: relative;
  background-color: goldenrod;
  margin: 4px;
}
.content-item image{
  width: 100%;
  height: 100%;
}

.content-item-text{
  position: absolute;
  bottom: 0rpx;
  margin-left: 10rpx;
  color: white;
  font-size: 14px;
}

.list-item{
  width: 100%;
  height: 500rpx;
}

.list-item-images{
   height: 300rpx;
   width: 100%;
   position: relative;
}
.list-item-images-img{
    width: 100%;
    height:100%;
}
.avatar{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  position: absolute;
  bottom: -75rpx;
  right: 40rpx;
}

.list-item-text{
  height: 200rpx;
  width: 96%;
  margin-top: 20rpx;
  padding-left: 2%;
  padding-right: 2%; 
}

.list-item-text-content{
  font-size: 14px;
  color: #999;
  margin-top: 20rpx;
}