.headerSection{
  display: flex;
  flex-direction: column;
  align-items: center;
  background: lightgray;
}
.userImageStyle{
  width: 140rpx;
  height:140rpx;
  border-radius: 50%;
  border:solid;
  border-color: white;
  border-width: 6rpx;
  margin-top: 40rpx;
}
.userText{
  margin: 10rpx;
  align-items: center;
}

.selection{
  display: flex;
  flex-direction: column;
  width: 100%;
}

.list-item{
  width: 100%;
  height: 500rpx;
}

.list-item-images{
   height: 300rpx;
   width: 100%;
   position: relative;
}
.list-item-images-img{
    width: 100%;
    height:100%;
}
.avatar{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  position: absolute;
  bottom: -75rpx;
  right: 40rpx;
}

.list-item-text{
  height: 200rpx;
  width: 96%;
  margin-top: 20rpx;
  padding-left: 2%;
  padding-right: 2%; 
}

.list-item-text-content{
  font-size: 14px;
  color: #999;
  margin-top: 20rpx;
}

.hot-box-more{ 
  text-align: center; 
  font-size: 22rpx; 
  color: #999; 
  margin-bottom: 30px;
}

.hot-box-more image{ 
  width: 80px;
  height: 16px;
  display: block;
  margin: 0 auto;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}